swagger: '2.0'
info:
  description: This is the API for the Shopping Cart project for our CS341 class.
  version: 1.0.0
  title: Shopping Cart

paths:
  /User/Create:
    post:
      tags:
      - User
        Admin
      summary: Add a new user to the store.
      consumes:
      - application/x-www-form-urlencoded
      produces:
      - application/json
      parameters:
      - in: formData
        name: siteName
        description: The name of your site
        type: string
      - in: formData
        name: email
        description: The new user's email address
        required: true
        type: string
      - in: formData
        name: password
        description: The user's desired password
        required: true
        type: string
      - in: formData
        name: type
        description: The type of user
        required: true
        type: string
        enum: [user, admin]
      - in: formData
        name: token
        description: An admin user token that must be included when creating an admin user
        required: false
        type: string
      - in: formData
        name: name
        description: The user's name
        required: true
        type: string
      responses:
        200:
          description: Success
          schema:
            type: object
            properties:
              message:
                type: string
        400:
          description: Bad Request
          schema:
            type: object
            properties:
              message:
                type: string

  /User/Authenticate:
    post:
      tags:
      - User
      summary: Authenticate an existing user. Returns a token that can be used to authenticate a user for the next 6 hours.
      consumes:
      - application/x-www-form-urlencoded
      produces:
      - application/json
      parameters:
      - in: formData
        name: siteName
        description: The name of your site
        type: string
      - in: formData
        name: email
        description: The user's email address
        required: true
        type: string
      - in: formData
        name: password
        description: The user's password
        required: true
        type: string
      responses:
        200:
          description: Authentication token
          schema:
            type: object
            properties:
              token:
                type: string          
        400:
          description: Bad Request
          schema:
            type: object
            properties:
              message:
                type: string

  /User/Get:
    post:
      tags:
      - User
      summary: Get details about the authenticated user.
      consumes:
      - application/x-www-form-urlencoded
      produces:
      - application/json
      parameters:
      - in: formData
        name: siteName
        description: The name of your site
        type: string
      - in: formData
        name: token
        description: The user's authentication token
        required: true
        type: string
      responses:
        200:
          description: User object
          schema:
            type: object
            properties:
              email:
                type: string
              name:
                type: string
              type:
                type: string
                enum: [user, admin]
        400:
          description: Bad Request
          schema:
            type: object
            properties:
              message:
                type: string

  /Product/Create:
    post:
      tags:
      - Product
        Admin
      summary: Add a new product to the store.
      consumes:
      - application/x-www-form-urlencoded
      produces:
      - application/json
      parameters:
      - in: formData
        name: siteName
        description: The name of your site
        type: string
      - in: formData
        name: name
        description: The name of the product
        required: true
        type: string
      - in: formData
        name: price
        description: The price of the product
        required: true
        type: number
      - in: formData
        name: quantity
        description: The number currently in stock
        required: true
        type: integer
      - in: formData
        name: image
        description: The visual for product, a URL
        required: true
        type: string
      - in: formData
        name: description
        description: The description of the product
        required: true
        type: string
      - in: formData
        name: category
        description: The categories that the product fits into, csv
        required: true
        type: string
      - in: formData
        name: token
        description: An admin user's authentication token
        required: true
        type: string
      responses:
        200:
          description: Success
          schema:
            type: object
            properties:
              message:
                type: string
        400:
          description: Bad Request
          schema:
            type: object
            properties:
              message:
                type: string

  /Product/Get:
    post:
      tags:
      - Product
      summary: Get details about an existing product.
      consumes:
      - application/x-www-form-urlencoded
      produces:
      - application/json
      parameters:
      - in: formData
        name: siteName
        description: The name of your site
        type: string
      - in: formData
        name: id
        description: The product's ID number
        required: true
        type: integer
      responses:
        200:
          description: Product object
          schema:
            type: object
            properties:
              name:
                type: string
              price:
                type: number
              quantity:
                type: integer
              image:
                type: string
              description:
                type: string
        400:
          description: Bad Request
          schema:
            type: object
            properties:
              message:
                type: string

  /Product/GetAll:
    post:
      tags:
      - Product
      summary: Get details about all existing products with the given parameters.
      consumes:
      - application/x-www-form-urlencoded
      produces:
      - application/json
      parameters:
      - in: formData
        name: siteName
        description: The name of your site
        type: string
      - in: formData
        name: category
        description: The category of the products
        type: string
      - in: formData
        name: search
        description: A search string
        type: string
      responses:
        200:
          description: Product object list
          schema:
            type: object
            properties:
              products:
                type: array
                items:
                  type: object
                  properties:
                    id:
                      type: integer
                    name:
                      type: string
                    price:
                      type: number
                    image:
                      type: string
                    description:
                      type: string
        400:
          description: Bad Request
          schema:
            type: object
            properties:
              message:
                type: string

  /Product/Delete:
    post:
      tags:
      - Product
        Admin
      summary: Deletes a product from the store.
      consumes:
      - application/x-www-form-urlencoded
      produces:
      - application/json
      parameters:
      - in: formData
        name: siteName
        description: The name of your site
        type: string
      - in: formData
        name: itemId
        description: The ID of the product
        required: true
        type: integer
      - in: formData
        name: token
        description: An admin user's authentication token
        required: true
        type: string
      responses:
        200:
          description: Success
          schema:
            type: object
            properties:
              message:
                type: string
        400:
          description: Bad Request
          schema:
            type: object
            properties:
              message:
                type: string

/Category/Create:
  post:
    tags:
    - Category
    summary: Create a new category
    consumes:
    - application/x-www-form-urlencoded
    produces:
    - application/json
    parameters:
      - in: formData
      name: name
      description: The category name
      type: string
      - in: formData
      name: token
      description: The user authentication token
      type: string
    responses:
      200:
        description: Bad Request
        schema:
          type: object
          properties:
            message:
              type: string
    400:
      description: Bad Request
      schema:
        type: object
        properties:
          message:
            type: string


/Category/GetAll:
post:
tags:
- Category
summary: Return a list of all existing categories
consumes:
- application/x-www-form-urlencoded
produces:
