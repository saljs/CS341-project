        required: true
        type: integer
      - in: formData
        name: itemQuantity
        description: The quantity of the product to add to the user's cart.
        required: true
        type: integer
      - in: formData
        name: token
        description: The user's authentication token.
        required: true
        type: string
      responses:
        200:
          description: Success
